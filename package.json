{
  "name": "smartish-mirror",
  "description": "A dashboard for my smark mirror",
  "version": "0.0.0",
  "private": true,
  "repository": "robb-j/smartish-mirror",
  "author": "",
  "license": "MIT",
  "scripts": {
    "coverage": "jest --coverage",
    "dev": "NODE_ENV=development nodemon -w src -x 'node -r dotenv/config' src/index.js",
    "serve:app": "http-server app",
    "serve:server": "node server/server.js",
    "lint": "eslint src",
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run test -s",
    "start": "node -r dotenv/config src/index.js",
    "test": "jest"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "crypto-random-string": "^3.0.1",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "kleur": "^3.0.3",
    "prompts": "^2.1.0"
  },
  "devDependencies": {
    "akita-ws": "^0.1.1",
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.19.1",
    "prettier": "^1.16.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/index.js"
}
